<% layout('layouts/boilerplate') %> 
<div id="cluster-map" style="width : 100%; height :500px"></div>
<h1>All Campgrounds</h1>
<a class =" btn btn-success mb-4" href = "/campgrounds/new">Add Campground</a>
<% for(let each of campground) { %>
    <div class="card mb-3 border-dark">
        <div class="row">
            <div class="col-md-4">
                <% if(each.images.length) {%> 
                   <img class = "img-fluid" alt = "" src = "<%=each.images[0].url%>">
                <% }else {%>
                   <img class = "img-fluid" alt = "" src = "https://res.cloudinary.com/dvh924b56/image/upload/v1614271247/Yelpcamp/lwykkhs0m0p4oyicnvqr.jpg">
                <% }%>  
            </div>
            <div class="col-md-8 card-body">
                <h5 class = "card-title"><%= each.title %> </h5>
                <p class = "card-text"><%= each.description %> </p>
                <p class = "card-text text-muted"><%= each.location %> </p>
                <a class = "btn btn-primary" href = "/campgrounds/<%= each.id %>">View <%= each.title %> </a>
            </div>
            
        </div>
    </div>
<% } %>  

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
